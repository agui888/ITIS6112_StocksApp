<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stocksapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/big_gorilla"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.stocksapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.stocksapp.TopOrBottom10Activity"
            android:label="@string/title_activity_top_or_bottom10" >
        </activity>
        <activity
            android:name="com.example.stocksapp.TopPickoftheDayActivity"
            android:label="@string/title_activity_top_pickofthe_day" >
        </activity>
        <activity
            android:name="com.example.stocksapp.CompanyActivity"
            android:label="@string/title_activity_company" >
        </activity>
        <activity
            android:name="com.example.stocksapp.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.stocksapp.CompareActivity"
            android:label="@string/title_activity_compare" >
        </activity>
    </application>

</manifest>